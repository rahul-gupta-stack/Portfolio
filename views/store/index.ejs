<%- include('../partials/head') %>
  </head>

  <body>
    <%- include('../partials/nav') %>

      <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-6xl">
        <h1 class="bg-blue-500 bg-primary" className="bg-blue-500 bg-primary">Welcome to Property Index Page</h1>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8"></div>
          <% properties.forEach(property => { %>
            <div class="bg-gradient-to-br from-blue-100 to-blue-300 rounded-2xl shadow-xl overflow-hidden transform hover:scale-105 transition duration-300">
              <% if (property.image) { %>
                <img src="<%= property.image %>" alt="Property Image"
                  class="w-full h-48 object-cover">
              <% } else { %>
                <div class="w-full h-48 bg-gray-200 flex items-center justify-center text-gray-500 text-2xl">
                  <span>No photo</span>
                </div>
              <% } %>
              <div class="p-6">
                <h3 class="text-2xl font-bold text-gray-800 mb-2">
                  <%= property.pname %>
                </h3>
                <p class="text-lg text-blue-700 font-semibold mb-1">
                  â‚¹ <%= property.price %>
                </p>
                <p class="text-gray-600 mb-4 flex items-center">
                  <i class="fas fa-map-marker-alt mr-2"></i>
                  <%= property.location %>
                </p>
                <a href="/property-list/<%= property.id %>" class="inline-block bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg shadow transition">
                  View Details
                </a>
              </div>
            </div>
          <% }) %>
        </div>
      </main>
  </body>

  </html>