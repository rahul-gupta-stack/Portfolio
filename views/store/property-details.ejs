<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-gray-100 to-gray-300 min-h-screen"></body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto px-4 py-12 max-w-5xl">
        <div class="bg-white rounded-3xl shadow-2xl overflow-hidden flex flex-col md:flex-row"></div>
            <!-- Image Section -->
            <div class="md:w-1/2 flex items-center justify-center bg-gray-50">
                <img src="<%= property.image %>" alt="<%= property.pname %>" class="w-full h-96 object-cover transition-transform duration-300 hover:scale-105">
            </div>
            <!-- Details Section -->
            <div class="md:w-1/2 p-8 flex flex-col justify-between">
                <div>
                    <h1 class="text-4xl font-extrabold text-gray-800 mb-4"><%= property.pname %></h1>
                    <div class="flex items-center mb-6">
                        <span class="text-yellow-400 text-2xl">â˜…</span>
                        <span class="ml-2 text-lg font-semibold text-gray-700"><%= property.rating %> / 5</span>
                    </div>
                    <div class="mb-6"></div>
                        <h3 class="text-xl font-semibold text-gray-700 mb-2">Description</h3>
                        <p class="text-gray-600 leading-relaxed"><%= property.description %></p>
                    </div>
                    <div class="mb-6">
                        <h3 class="text-xl font-semibold text-gray-700 mb-2">Location</h3>
                        <p class="text-gray-600"><%= property.location %></p>
                    </div>
                </div>
                <div class="flex items-center justify-between mt-8">
                    <div>
                        <h3 class="text-xl font-semibold text-gray-700 mb-2">Price</h3>
                        <p class="text-green-600 text-2xl font-bold">$<%= property.price %> <span class="text-base font-normal text-gray-500">/ night</span></p>
                    </div>
                    <a href="/book/<%= property.id %>" class="bg-red-500 hover:bg-red-600 text-white font-bold py-3 px-8 rounded-xl shadow-lg transition duration-200">Book Now</a>
                </div>
            </div>
        </div>
    </main>
</body>
</html>
